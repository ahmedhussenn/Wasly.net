<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Order List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .order-card {
            border: 1px solid #ccc;
            margin: 10px;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            position: relative; /* Add this to make the button positioning relative to the card */
        }

            .order-card h2 {
                margin: 0;
            }

        .order-attribute {
            margin: 5px 0;
        }

        .pick-up-button {
            position: absolute;
            bottom: 10px;
            right: 10px;
        }
    </style>
</head>
@{
    Layout = "_LayoutOfEmployee";
}
<body>
    <h1>Order List</h1>

    @foreach (var order in Model)
    {
        <div class="order-card">

            <div class="order-attribute">
                <strong>Name:</strong> @order.Name
            </div>
            <div class="order-attribute">
                <strong>Description:</strong> @order.Description
            </div>
            <div class="order-attribute">
                <strong>Released Date:</strong> @order.Released_Date.ToString("yyyy-MM-dd")
            </div>
            <div class="order-attribute">
                <strong>Delivered Date:</strong> @order.Delivered_Date.ToString("yyyy-MM-dd")
            </div>
            <div class="order-attribute">
                <strong>Pickup Address:</strong> @order.Pickup_Address
            </div>
            <div class="order-attribute">
                <strong>Destination Address:</strong> @order.Destination_Address
            </div>
            <div class="order-attribute">
                <a class="pick-up-button btn btn-primary" asp-route-id="@order.Id" asp-action="addOrderToEmployee" asp-controller="Employee">On The Road</a>
            </div>
            <div class="order-attribute">
                <a class="pick-up-button btn btn-primary" asp-route-id="@order.Id" asp-action="deliverTheOrder" asp-controller="Employee">Delivered</a>
            </div>
        </div>
    }
</body>
</html>
